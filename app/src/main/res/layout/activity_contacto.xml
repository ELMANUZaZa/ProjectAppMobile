<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion: Calle Niños Héroes s/n, Moderna, 85330 Empalme, Son."
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn_mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir mapa"
        android:backgroundTint="@color/guinda"/>
    <TextView
        android:id="@+id/tv_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo: atencionciudadanaempalme@gmail.com"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar correo"
        android:backgroundTint="@color/guinda"/>
    <TextView
        android:id="@+id/tv_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teléfono: +52 622 124 3081"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_llamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llamar"
        android:backgroundTint="@color/guinda"/>




</LinearLayout>